{
  "permissions": {
    "allow": [
      "Read",

      "Bash(cat *)",
      "Bash(echo *",
      "Bash(find *)",
      "Bash(grep *)",
      "Bash(head *)",
      "Bash(less *)",
      "Bash(ls *)",
      "Bash(tail *)",
      "Bash(tree *)",

      "Bash(git *)",
      "Bash(git add *)",
      "Bash(git commit *)",
      "Bash(git push *)",
      "Bash(git reset *)",
      "Bash(gh *)",

      "Bash(bin/*)",
      "Bash(bundle exec *)",
      "Bash(docker *)",
      "Bash(pnpm *)"
    ],
    "defaultMode": "plan"
  },
  "model": "opus",
  "enabledPlugins": {
    "frontend-design@claude-plugins-official": true
  }
}
